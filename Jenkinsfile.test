pipeline {
    agent any
    
    stages {
        stage('Test Stage') {
            steps {
                script {
                    echo 'üß™ This is a test stage'
                    echo "Build Number: ${BUILD_NUMBER}"
                    echo "Workspace: ${WORKSPACE}"
                    
                    sh '''
                        echo "Testing basic shell commands..."
                        pwd
                        ls -la
                        whoami
                        echo "‚úÖ Basic test completed"
                    '''
                }
            }
        }
        
        stage('Test Security Tools') {
            steps {
                script {
                    echo 'üîç Testing security tools availability...'
                    
                    sh '''
                        echo "Testing Gitleaks..."
                        gitleaks version || echo "Gitleaks not found"
                        
                        echo "Testing Trivy..."
                        trivy version || echo "Trivy not found"
                        
                        echo "Testing Hadolint..."
                        hadolint --version || echo "Hadolint not found"
                        
                        echo "Testing Semgrep..."
                        semgrep --version || echo "Semgrep not found"
                        
                        echo "Testing Checkov..."
                        checkov --version || echo "Checkov not found"
                        
                        echo "‚úÖ Security tools test completed"
                    '''
                }
            }
        }
    }
    
    post {
        always {
            echo 'üèÅ Test pipeline completed'
        }
    }
}